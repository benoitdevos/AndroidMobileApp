<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/scheduleItemSpeakerContainerImage"
        android:layout_width="@dimen/schedule_speaker_image_size"
        android:layout_height="@dimen/schedule_speaker_image_size"
        android:layout_marginRight="4dp"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/scheduleItemSpeakerContainerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:textColor="#A0000000"
        android:textSize="14dp"/>

</merge>